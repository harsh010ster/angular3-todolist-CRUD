{% extends 'base.html.twig' %}

{% block body %}
    <h2 class="page-header">Latest TODOs</h2>
    <table class="table">

        <thead>
        <tr>
            <th>#</th>
            <th>To Do</th>
            <th>Due date</th>
            <th>Username</th>
        </tr>
        </thead>
        <tbody>
        {% for todo in todos %}
        <tr>
            <th scope="row">{{ todo.id }}</th>
            <td>{{ todo.name }}</td>
            <td>{{ todo.dueDate | date('F j, Y') }}</td>
            <td>
                <a href="/details/{{ todo.id }}" class="btn btn-success">View</a>
                <a href="/edit/{{ todo.id }}" class="btn btn-default">Edit</a>
                <a href="/delete/{{ todo.id }}" class="btn btn-danger">Delete</a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}